<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
  <property>
    <name>dfs.replication</name>
    <value>1</value>
  </property>

  <property>
    <name>dfs.blocksize</name>
    <value>16777216</value>
    <description>16 * 1024 * 1024</description>
  </property>

  <property>
    <value>dfs.permissions.enabled</value>
    <value>false</value>
  </property>

  <property>
    <name>dfs.webhdfs.enabled</name>
    <value>true</value>
  </property>

  <property>
    <name>dfs.namenode.name.dir</name>
    <value>${self.home}/namenode</value>
  </property>

  <property>
    <name>dfs.namenode.checkpoint.dir</name>
    <value>${self.home}/secondary-namenode</value>
  </property>

  <property>
    <name>dfs.datanode.data.dir</name>
    <value>${self.home}/datanode</value>
  </property>

  <property>
    <name>dfs.namenode.rpc-bind-host</name>
    <value>0.0.0.0</value>
  </property>

  <property>
    <name>dfs.namenode.servicerpc-bind-host</name>
    <value>0.0.0.0</value>
  </property>

  <property>
    <name>dfs.namenode.http-bind-host</name>
    <value>0.0.0.0</value>
  </property>

  <property>
    <name>dfs.namenode.http-address</name>
    <value>${self.host}:50070</value>
  </property>

  <property>
    <name>dfs.namenode.secondary.http-address</name>
    <value>${self.host}:50090</value>
  </property>

  <property>
    <name>dfs.datanode.address</name>
    <value>${self.host}:50010</value>
  </property>

  <property>
    <name>dfs.datanode.ipc.address</name>
    <value>${self.host}:50020</value>
  </property>

  <property>
    <name>dfs.datanode.http.address</name>
    <value>${self.host}:50075</value>
  </property>
</configuration>
