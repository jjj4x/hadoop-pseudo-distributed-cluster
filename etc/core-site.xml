<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
  <property>
    <name>self.host</name>
    <value>hpdc</value>
  </property>

  <property>
    <name>self.home</name>
    <value>/opt/hadoop-runtime</value>
  </property>

  <property>
    <name>hadoop.tmp.dir</name>
    <value>${self.home}/logs</value>
  </property>

  <property>
    <name>fs.defaultFS</name>
    <value>hdfs://${self.host}:8020/</value>
  </property>

  <property>
    <name>fs.trash.interval</name>
    <value>0</value>
  </property>

  <property>
    <name>io.file.buffer.size</name>
    <value>4096</value>
  </property>

  <property>
    <name>hadoop.proxyuser.hadoop.groups</name>
    <value>*</value>
  </property>

  <property>
    <name>hadoop.proxyuser.hadoop.hosts</name>
    <value>*</value>
  </property>
</configuration>
